SHELL=/bin/sh
#
#
.SUFFIXES: .f90 .mod

OBJS= crite_constnt.o main_select.o q_selet.o q_selet_sfc.o t_selet.o  \
      t_selet_sfc.o w_selet.o w_selet_sfc.o ps_selet.o
CMD=select.x

FC=ifort

LIBS = -L/nwprod/lib -lw3nco_4 -lw3emc_4 -lbufr_4_64

FFLAGS = -O2 -convert big_endian -assume byterecl

LDFLAGS = 


$(CMD):		$(OBJS) 
	$(FC) $(LDFLAGS) ${FFLAGS} -o $(@) $(OBJS) ${LIBS}


clean:
	-rm -f *.o ${CMD}

clobber:	clean
	-rm -f $(CMD) $(CMD).prof

void:	clobber
	-rm -f $(SRCS)

.f.o:
	${FC} -c ${FFLAGS} $*.f

.mod.o:
	${FC} -c ${FFLAGS} $*.f90

.f90.o:
	${FC} -c ${FFLAGS} $*.f90

